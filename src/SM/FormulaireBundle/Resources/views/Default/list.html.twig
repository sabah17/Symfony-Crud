{% extends "base.html.twig" %}
{% block body %}
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <table class=" table table-striped table-bordered" >
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Nationalite</th>
                <th>Age</th>
                <th>Genre</th>
                <th>Action</th>

            </tr>
            {% for member in members %}<tr>
                <td>{{ member.nom }}</td>
                <td>{{ member.prenom }}</td>
                <td>{{ member.nationalite }}</td>
                <td>{{ member.age }}</td>
                <td>{{ member.genre }}</td>
                <td>
                    <button href="{{ path('edit_element',{'id': member.id}) }}" style="font-size:24px">Supprimer<i class="fa fa-trash"></i></button>
                    <a href="{{ path('edit_element',{'id': member.id}) }}">Supprimer</a><br>
                    <a href="{{ path('supp_element',{'id': member.id}) }}">Modifier</a>
                </td>
            </tr>{% endfor %}
        </table>
        <div class="text-center">
            {% for i in 1..pages %}
                <a href="{{ path('list_element',{'id': i})}}">{{ i }}</a>
            {% endfor %}
        </div>
    </div>
    <div class="col-sm-3"></div>


{% endblock %}
