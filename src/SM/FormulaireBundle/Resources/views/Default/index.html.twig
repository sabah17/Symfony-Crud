{% extends "base.html.twig" %}

{% block body%}
<div class="row">
    <div class="col-sm-4"></div>
        <div class="col-sm-4">
            {{ form_start(form, {'attr': {'class': ''}}) }}
            <div class="form-group">{{ form_row(form.nom, {'attr': {'class': 'form-control'}}  ) }}</div>
            <div class="form-group">{{ form_row(form.prenom, {'attr': {'class': 'form-control'}} ) }}</div>
            <div class="form-group">{{ form_row(form.age, {'attr': {'class': 'form-control'}} ) }}</div>
            <div class="form-check">{{ form_row(form.genre, {'attr': {'class': 'form-check-input'}} ) }}</div>
            <div class="form-group">{{ form_row(form.nationalite, {'attr': {'class': 'form-control'}} ) }}</div>
            <input type="submit" value="Create" class="btn btn-primary pull-left" />
            {{ form_end(form) }}
        </div>
    <div class="col-sm-4"></div>
</div>
{% endblock %}
